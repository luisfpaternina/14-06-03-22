<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_delivery_document" inherit_id="stock.report_delivery_document">
        <xpath expr="//table[@t-if='o.pack_operation_ids']" position="after">
            <t t-if="o.line_pickup_order_ids">
                <br/>
                <p>
                    Items with problems to collect.
                </p>
                <table class="table table-condensed mt48">
                    <thead>
                        <tr>
                            <th><strong>Label</strong></th>
                            <th><strong>Product</strong></th>
                            <th><strong>Length</strong></th>
                            <th><strong>Height</strong></th>
                            <th><strong>Width</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.line_pickup_order_ids" t-as="pickup_line">
                            <td><span t-field="pickup_line.label"/></td>
                            <td><span t-field="pickup_line.product_id"/></td>
                            <td><span t-field="pickup_line.length"/></td>
                            <td><span t-field="pickup_line.height"/></td>
                            <td><span t-field="pickup_line.width"/></td>
                        </tr>
                    </tbody>
                </table>
            </t>

        </xpath>
    </template>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_picking_form_claim_customization" model="ir.ui.view">
            <field name="name">stock.picking.claim.customization.form</field>
            <field name="model">stock_picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Articles with problems" attrs="{'invisible': [('pickup_order_id', '=', False)]}">
                        <group>
                            <field name="pickup_order_id" invisible="1"/>
                        </group>
                        <field name="line_pickup_order_ids" colspan="4" readonly="1"/>
                    </page>
                </notebook>
            </field>
        </record>
        <record id="view_warehouse_form_claim_customization" model="ir.ui.view">
            <field name="name">stock.warehouse.claim.customization.form</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock.view_warehouse"/>
            <field name="arch" type="xml">
                <field name="wh_output_stock_loc_id" position="after">
                    <field name="lot_pickup_order_id" readonly="1"/>
                </field>
            </field>
        </record>
    </data>
</odoo>

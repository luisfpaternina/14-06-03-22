<?xml version="1.0"?>
<odoo>
    <record model="ir.ui.view" id="sale_claims_form_view">
        <field name="name">CRM - Claims Form</field>
        <field name="model">crm.claim</field>
        <field name="inherit_id" ref="crm_claim.crm_case_claims_form_view"/>
        <field name="arch" type="xml">
            <!--<header position="inside">
                <button name="generate_pickup_order" string="Generate Pickup Order" type="object"
                        attrs="{'invisible': ['|', ('solution','!=', True), ('pickup_id','!=', False)]}"/>
                <button name="action_generate_manufacturing" string="Manufacturing" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('solution','!=', True), ('is_manufacturing', '=', True)]}"/>
            </header>-->
            <xpath expr="//group[1]" position="replace">
                <group>
                    <group>
                        <!--<field name="code"/>-->
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="claim_type" required="True" options="{'no_create': True}"/>
                        <field name="date"/>
                    </group>
                </group>
            </xpath>

            <xpath expr="//form[1]/sheet[1]/group[3]/notebook[1]" position="inside" >
                <notebook string="Principal Page">
                    <page>
                        <group>
                            <group>
                                <field name="motive"/>
                            </group>
                            <group>
                                <field name="order_id" options="{'no_create_edit': True}"/> 
                                <field name="reference" readonly="1"/>
                                <field name="reference_client" readonly="1"/>
                                <field name="solution"/>
                                <field name="pickup_id" attrs="{'invisible': [('pickup_id','=', False)]}" readonly="1"/>
                                <field name="state_pickup"/>
                                <field name="is_manufacturing" invisible="0"/> 
                            </group>
                         </group>
                    </page>
                </notebook>    
                <notebook string="Articles with problems">
                    <page>
                        <group>
                            <field name="domain_line_ids" widget="many2many_tags" invisible="1"/>
                        </group>
                    </page>
                    <page string="Articles manufacturing">
                        <group>
                            <field name="manufacturing_ids"/>
                        </group>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

    <record id="claim_line_tree" model="ir.ui.view">
            <field name="name">claim.line.tree</field>
            <field name="model">claim.line</field>
            <field name="arch" type="xml">
                <tree string="Claim lines">
                    <field name="label"/>
                    <!--<field name="product_id"/>-->
                    <field name="length"/>
                    <field name="height"/>
                    <field name="width"/>
                </tree>
            </field>
        </record>

    <record id="claim_line_form" model="ir.ui.view">
            <field name="name">claim.line.form</field>
            <field name="model">claim.line</field>
            <field name="arch" type="xml">
                <form string="Claim line">
                    <sheet>
                        <group>
                            <group>
                                <field name="label" readonly="1"/>
                                <!--<field name="product_id" readonly="1"/>-->
                            </group>
                            <group>
                                <field name="length" readonly="1"/>
                                <field name="height" readonly="1"/>
                                <field name="width" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

</odoo>

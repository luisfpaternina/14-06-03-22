<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="manufacturing_pickup_order_wizard_form" model="ir.ui.view">
            <field name="name">manufacturing.pickup.order.wizard.form</field>
            <field name="model">manufacturing.pickup.order.wizard</field>
            <field name="arch" type="xml">
                <form string="Manufacturing Pickup Order">
                    <group>
                        <group>
                            <field name="claim_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="order_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Articles to manufacturing">
                            <field name="line_ids" colspan="4" nolabel="1">
                                <tree editable="bottom">
                                    <field name="label" readonly="1"/>
                                    <field name="product_id" readonly="1"/>
                                    <field name="product_qty" readonly="1"/>
                                    <field name="product_uom_id" readonly="1"/>
                                    <field name="length" readonly="1"/>
                                    <field name="height" readonly="1"/>
                                    <field name="width" readonly="1"/>
                                    <field name="semifinished_id" readonly="1" invisible="1"/>
                                    <field name="package_id" readonly="1" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button name="confirm"
                                string="Confirm"
                                type="object"
                                class="oe_highlight" />
                        o
                        <button string="Close" special="cancel" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="manufacturing_pickup_order_aux_form" model="ir.ui.view">
            <field name="name">manufacturing.pickup.order.aux.form</field>
            <field name="model">manufacturing.pickup.order.aux</field>
            <field name="arch" type="xml">
                <tree string="Articles to manufacturing">
                    <field name="label" readonly="1"/>
                    <field name="product_id" readonly="1"/>
                    <field name="product_qty" readonly="1"/>
                    <field name="product_uom_id" readonly="1"/>
                </tree>
            </field>
        </record>

        <act_window id="action_manufacturing_pickup_order_wizard_form"
                    name="Manufacturing Pickup Order"
                    res_model="manufacturing.pickup.order.wizard"
                    view_mode="form"
                    view_type="form"
                    view_id="manufacturing_pickup_order_wizard_form"
                    target="new" />

    </data>
</odoo>
